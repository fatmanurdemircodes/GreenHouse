@model IEnumerable<GreenHouse.Core.Entities.KaraListe>

@{
    ViewData["Title"] = "Kara Listem";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2 class="text-danger"><i class="fas fa-ban"></i> Kara Listem</h2>

<div class="table-responsive shadow-lg rounded">
    <table class="table table-hover table-bordered bg-light">
        <thead class="bg-danger text-white">
            <tr>
                <th>İçerik Adı</th>
                <th class="text-center">İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="align-middle">
                    <td class="fw-bold">@item.Icerik?.IcerikAdi</td>
                    <td class="text-center">
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.KaraListeId" />
                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Sil
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
