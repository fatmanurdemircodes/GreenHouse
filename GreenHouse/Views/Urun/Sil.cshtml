@using GreenHouse.Core.Entities
@model Urun

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 500px;">
        <div class="card-body text-center">
            <div class="mb-3">
                <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 3rem;"></i>
            </div>
            <h3 class="text-danger fw-bold">Ürünü Silmek Üzeresiniz!</h3>
            <p class="text-muted">Bu işlem geri alınamaz. <strong>@Model.UrunAdi</strong> adlı ürünü silmek istediğinizden emin misiniz?</p>

            <form asp-action="Sil" method="post">
                <input type="hidden" asp-for="UrunId" />

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-danger px-4 me-2 shadow-sm">
                        <i class="bi bi-trash"></i> Sil
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                        <i class="bi bi-arrow-left"></i> Vazgeç
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
